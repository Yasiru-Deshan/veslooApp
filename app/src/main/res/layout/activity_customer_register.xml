<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardient"
    android:orientation="vertical"
    tools:context=".CustomerRegister">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="296dp"
                android:layout_height="78dp"
                android:layout_marginTop="20dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="46sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="76dp"
                android:layout_marginTop="20dp"
                android:text="@string/customer_register"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/registerUserFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/email_address"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/fullname"
                android:inputType="textPersonName"
                android:padding="16dp" />

            <EditText
                android:id="@+id/registerUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/email_address"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/reg_address"
                android:inputType="text"
                android:padding="16dp" />

            <EditText
                android:id="@+id/registerUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/email_address"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/phone"
                android:inputType="phone"
                android:padding="16dp" />

            <EditText
                android:id="@+id/registerEmailcustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/email_address"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:padding="16dp" />

            <EditText
                android:id="@+id/registerPasswordcustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/hint_password"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:padding="16dp" />
            <EditText
                android:id="@+id/confirmPasswordcustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/hint_password"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:hint="@string/confirmPass"
                android:inputType="textPassword"
                android:padding="16dp" />

            <Button
                android:id="@+id/btn_register_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:padding="16dp"
                android:text="@string/register"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_cus_goto_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="46dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorPrimaryDark"

                android:padding="14dp"
                android:text="@string/haveAcc"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>